<html>
<div class="card text-center mb-3">
  <div class="card-body">
  <body>
  <% if @user !=nil%>
  <div class="card bg-light text-danger">
      <% @user.errors.each do |attr, msg|  %>
      <%= attr %> <%= msg %>
    <% end %>
  </div>
  <% end %>
    <div class="container">
      <h1> Connecte toi vite !</h1>
      <%= form_tag url_for(action: 'create'), method: "post" do %>
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
        <br />
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
            <%= label_tag 'email :' %>
          </div>
          <div class="col-3">
            <%= text_field_tag 'email', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>
        <br />
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
            <%= label_tag 'Mot de passe :' %>
          </div>
          <div class="col-3">
            <%= password_field_tag 'password', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>
        <br />
        <%= submit_tag "Connexion", class: 'btn btn-dark btn-lg btn-submit'  %>
      <% end %>
    </div>
  </body>
</div>
  </div>
</html>
