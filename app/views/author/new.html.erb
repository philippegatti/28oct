<html>
<div class="card text-center mb-3">
  <div class="card-body">
  <body>
  <% if @user !=nil%>
  <div class="card bg-light text-danger">
      <% @user.errors.each do |attr, msg|  %>
      <%= attr %> <%= msg %>
    <% end %>
  </div>
  <% end %>
    <div class="container">
      <h1> Inscris toi vite !</h1>
      <%= form_tag url_for(action: 'create'), method: "post" do %>
        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
        <br />
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
          <%= label_tag 'PrÃ©nom :' %>
          </div>
          <div class="col-3">
          <%= text_field_tag 'first_name', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>     
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
          <%= label_tag 'Nom :' %>
          </div>
          <div class="col-3">
          <%= text_field_tag 'last_name', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
          <%= label_tag 'email :' %>
          </div>
          <div class="col-3">
          <%= text_field_tag 'email', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
          <%= label_tag 'Age :' %>
          </div>
          <div class="col-3">
          <%= text_field_tag 'age', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
          <%= label_tag 'Ville :' %>
          </div>
          <div class="col-3">
            <%= select_tag 'city_name', options_for_select(City.all.map{|city| city.name}), options = {style:"height:30px;width:300px"} %>
          </div>
        </div>
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
            <%= label_tag 'Quelques mots sur toi :' %>
          </div>
        <div class="col-3">
            <%= text_area_tag 'description', value = nil, options = {style:"height:120px;width:300px;vertical-align:text-top"}%>
          </div>
        </div>
        <br />
        <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
          <%= label_tag 'Mot de passe :' %>
          </div>
          <div class="col-3">
          <%= password_field_tag 'password', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>
          <div class="row justify-content-center align-self-center mx-5">
          <div class="col-3">
          <%= label_tag 'Confirmation du mot de passe :' %>
          </div>
          <div class="col-3">
          <%= password_field_tag 'password_confirmation', value = nil, options = {style:"height:30px;width:300px"} %>
          </div>
        </div>
        <br />
        <br />
        <%= submit_tag "Valider", class: 'btn btn-dark btn-lg btn-submit'  %>
      <% end %>
    </div>
  </body>
</div>
  </div>
</html>
